<div class="card my-5 rounded border border-primary border-4 text-primary" style="max-width: 600px; margin:0 auto; background-color: 	#FFE4CA">
  <div class="card-body">
    <h5 class="card-title">Register</h5>
    <p class="card-text">
      <form action="/users" method="POST">
        <div class="my-3">
          <div>
            <label for="name">Name</label>
          </div>
          <input type="text" name="name" placeholder="Enter name" class="form-control">
        </div>
        <div>
          <div>
            <label for="email">Email</label>
          </div>
          <input type="email" name="email" placeholder="Enter email" class="form-control" required>
        </div>
        <div class="my-3">
          <div>
            <label for="password">Password</label>
          </div>
          <input type="password" name="password" placeholder="Enter password" class="form-control" required>
        </div>
        <div class="my-3">
          <div>
            <label for="confirmPassword">Confirm password</label>
          </div>
          <input type="password" name="confirmPassword" placeholder="Confirm password" class="form-control" required>
        </div>
        <div class="mt-3">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>
      <form action="/oauth/login/facebook" method="GET">
        <button class="btn btn-primary mt-2" type="submit">Facebook Login</button>
      </form>
      <div class="text-muted mt-3">
        <span>
          Already have an account?
          <a href="/login">Login</a>
        </span>
      </div>
    </p>
  </div>
</div>